<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfil"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:onClick="retornar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/retornar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Perfil"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ImgPerfilFoto"
        android:onClick="cambiarFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/foto1"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/txtPerfilNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juan"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido: "
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/txtPerfilApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perez"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono: "
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/lblPerfilTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="67405585"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"/>

    <Button
        android:onClick="actualizarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="50dp"/>

</LinearLayout>